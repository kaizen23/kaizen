= form_for ([@course,@lesson,@page])  do |f|
  -if @page.errors.any?
    #error_explanation
      %h2= "#{pluralize(@page.errors.count, "error")} prohibited this page from being saved:"
      %ul
        - @page.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :content
    = f.text_area  :content
  .field
    = f.label :name		
    = f.text_area  :name
  .field
    = f.label :lesson_id
    = f.number_field :lesson_id
  .actions
    = f.submit 'Save'
    
    

