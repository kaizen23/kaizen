%h1 Listing lessons
%br
%h1.actions
  = link_to 'Back to Courses List', courses_path
%br
%table
  %tr
    %th Nr
    %th Name
    %th Action
   
   

  - @lessons.each do |lesson|
    %tr
      
      %td= lesson.id
      %td= lesson.name
      %td.actions
        = link_to 'View the pages', course_lesson_pages_path(@course,lesson) 
        |
        = link_to 'Show', course_lesson_path(@course,lesson)
        |
        = link_to 'Edit', edit_course_lesson_path(@course,lesson)
        |
        = link_to 'Destroy', [@course,lesson], :confirm => 'Are you sure?', :method => :delete

%br
%p.actions

  = link_to 'New Lesson', new_course_lesson_path(@course)
